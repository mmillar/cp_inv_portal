<%= form_for(@conference) do |f| %>
  <% if @conference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@conference.errors.count, "error") %> prohibited this conference from being saved:</h2>

      <ul>
      <% @conference.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => '50x10' %>
  </div>
  <% if @conference.id == nil %>
  <div class="field">
    <%= f.label :docket %><br />
    <%= text_field :transaction, :docket %>
  </div>
  <div class="field">
    <%= f.label :folded %><br />
    <%= text_field :transaction, :folded, :value => 0 %>
  </div>
  <div class="field">
    <%= f.label :flat %><br />
    <%= text_field :transaction, :flat, :value => 0 %>
  </div>
  <% end %>
  <div>
    <%= f.label :contact %><br />
    <%= f.collection_select :user_id, User.all, :id, :full_name %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
