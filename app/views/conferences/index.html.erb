<div class="block" id="block-text">  
  <div class="content">
    <div class="inner">
      <h1>Listing conferences</h1>

      <table width="80%">
        <tr>
          <th>Code</th>
          <th>Name</th>
          <th>Notes</th>
          <th>Contact</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

      <% @conferences.each do |conference| %>
        <tr>
          <td><%= conference.code %></td>
          <td><%= conference.name %></td>
          <td><%= conference.notes %></td>
          <td><%= conference.user.full_name %></td>
          <td><%= link_to 'Show', conference %></td>
          <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
          <td><%= link_to 'Destroy', conference, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
      <% end %>
      </table>

      <br />

      <%= link_to 'New Conference', new_conference_path %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>